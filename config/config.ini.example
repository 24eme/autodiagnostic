[globals]
AUTOLOAD=../app/
UI=../ui/
LOGS=../var/log/
UPLOADS=../storage/uploads/
CACHE=true
FICHES_FILE=../config/fiches.yml

DEBUG=3 ; Supprimer pour prod
ONERROR="CMS->error"

site="Autodiagnostic"
db="sqlite:../db/autodiagnostic.db"

expiry=24
time_format="d M Y h:ia"
max_kb=8192
allowed="image/gif","image/jpeg","image/png"
eurocookie=TRUE

# See https://github.com/apereo/phpCAS/blob/1.3.8/docs/examples/config.example.php for more config
CAS_HOST='cas.example.com'
CAS_CONTEXT='/cas'
CAS_PORT=443
CAS_CA_CERT='/path/to/cachain.pem'

# Config CAS Avancée
CAS_AVANCEE_CLIENT_DOMAIN='127.0.0.1'
CAS_AVANCEE_CLIENT_PATH='phpcas'
CAS_AVANCEE_CLIENT_SECURE=true
CAS_AVANCEE_CLIENT_HTTPONLY=true
CAS_AVANCEE_CLIENT_LIFETIME=0

VITICONNECT_API_SECRET="SECRET"

# Déprécié
;COUCHDBHOST=
;COUCHDBPORT=
;COUCHDBBASE=
